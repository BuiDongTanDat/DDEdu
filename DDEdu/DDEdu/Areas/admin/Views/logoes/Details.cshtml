@model DDEdu.Models.logo
@using DDEdu.Helper
@{
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Logo Detail
            </div>
            <div class="panel-body">
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <b>Logo Image</b>
                        </div>
                        <div class="col-md-2">
                            <img src="~/Content/upload/img/logo/@Model.logoImage" width="100px" />
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Logo Name</b>
                            </div>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.logoName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.logoName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Link</b>
                            </div>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.link, new { @class = "form-control", @rows = 1 , @disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.link, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Welcome title</b>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Slogan title</b>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.desc, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                            </div>
                        </div>
                      
                            <div class="form-group text-end">
                                <div class="col-md-10" style="text-align:end">
                                    @Html.NoEncodeActionLink("<span>EDIT</span>", "EDIT", "Edit", "logoes", routeValues: new { id = Model.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                                </div>
                            </div>

                        </div>
                    </div>
        </div>
    </div>
</div>
