@{
    ViewBag.Title = "DDEdu - AboutUs";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<section class="timeline-section section-padding" id="section_3" style="background-image: url('@Url.Content("~/Content/images/" + @Html.Action("getImgBG", "AboutUs"))');">

    <br />
    <br />
    <br />
    <div class="section-overlay"></div>

    <div class="container">
        <div class="row">

            <div class="col-12 text-center">
                <h2 class="text-white mb-4">How we make your dreams come true?</h2>
            </div>

            <div class="col-lg-10 col-12 mx-auto">
                <div class="timeline-container">
                    @Html.Action("getInto", "AboutUs")
                </div>
            </div>
            <div class="col-12 text-center mt-5">
                <p class="text-white">
                    Begin your journey now
                    <a href="/courses" class="btn custom-btn custom-border-btn ms-3">EXPLORE OUR COURSES</a>
                </p>
            </div>
        </div>
    </div>
</section>


<section class="faq-section section-padding" id="section_4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12">
                <h3 class="mb-4">Frequently Asked Questions</h3>
            </div>

            <div class="clearfix"></div>

            <div class="col-lg-5 col-12">
                <img src="~/Content/images/@Html.Action("getImgQ", "AboutUs")" class="img-fluid" alt="FAQs">
            </div>
             @Html.Action("getQuestion", "AboutUs")


        </div>
    </div>
</section>

