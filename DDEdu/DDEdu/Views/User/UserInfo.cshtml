
@{
    ViewBag.Title = "UserInfo";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model DDEdu.Models.user



<section class="site-header-user d-flex flex-column">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-12">
                <div>
                    @*Phần này chưa được đổi hình ảnh*@
                    <img src="~/Content/images/undraw_Remote_design_team_re_urdx.png">
                </div>
                <div class="col-lg-12 col-12">
                    <a href=@Url.Action("changePassword", "User") class="login-button">Change Password</a>
                    <a href=@Url.Action("changeProfile", "User") class="login-button">Edit profile</a>
                    <a href=@Url.Action("Logout", "User") class="logout-button">Log Out</a>
                </div>
            </div>

            <div class="col-lg-8 col-12">
                <h2 class="title-form">User Information</h2>
                <div class="title-form"><b>Username: </b>@Model.username</div>
                <div class="title-form"><b>Fullname: </b>@Model.fullname</div>
                <div class="title-form"><b>Email: </b>@Model.email</div>
                <div class="title-form"><b>Date of Birth: </b>@Model.birth.Value.ToString("dd/MM/yyyy")</div>
                <div class="title-form"><b>Account created: </b>@Model.dateBegin.Value.ToString("dd/MM/yyyy")</div>
                <div class="title-form"><b>Registered courses: </b> <a href="" class="forgot">View Detail</a></div>
                <ul class="title-form">
                    <li class="title-form">Course 1 - 12/10/2024</li>
                    <li class="title-form">Course 2 - 15/10/2024</li>
                    <li class="title-form">Course 3 - 20/10/2024</li>
                    <li class="title-form">Course 4 - 25/10/2024</li>
                    <li class="title-form">Course 5 - 30/10/2024</li>
                </ul>
            </div>
        </div>
    </div>
</section>

@if (TempData["Success"] != null)
{
    <script type="text/javascript">
        alert("@TempData["Success"]");
    </script>
}