@model DDEdu.Models.contact


<div class="col-lg-3 col-md-4 col-6 mb-4 mb-lg-0">
    <h6 class="site-footer-title mb-3">Contact</h6>

    <p class="text-white d-flex mb-1">
        <a href="tel: @Model.hotline" class="content-footer">
            Hotline: @Model.hotline
        </a>
    </p>

    <p class="text-white d-flex">
        <a href="mailto:@Model.email" class="content-footer">
            Email: @Model.email
        </a>
    </p>
</div>

<div class="col-lg-3 col-md-4 col-6 mb-4 mb-lg-0">
    <h6 class="site-footer-title mb-3">Information</h6>

    <p class="text-white d-flex mb-1" style="text-align: justify; font-size:15px">
        @Model.name
    </p>

    <p class="text-white d-flex" style="text-align:justify; font-size:15px">
        Address: @Model.address
    </p>
</div>


<div class="col-lg-12 col-md-12 col-12 mb-12 mb-lg-12">
    <p class="content-footer" style="text-align: center">
        Copyright © 2048 Topic Listing Center. All rights reserved.
        <br>Design: <a rel="nofollow" href="https://templatemo.com" target="_blank">TemplateMo</a>
    </p>

</div>
