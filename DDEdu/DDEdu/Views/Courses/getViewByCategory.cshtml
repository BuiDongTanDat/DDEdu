@model DDEdu.Models.category


@{
    ViewBag.Title = "DDEdu - Course - " + Model.name;
    Layout = "~/Views/Shared/MyLayout.cshtml";
}


<section class="section-padding">
    <div class="container">
        <br />
        <br />
        <div class="col-lg-12 col-12">
            <h3 class="center-category"><a class="category" href="/@ViewBag.metaCourses/@Model.meta">@Model.name</a></h3>
        </div>
        <hr>
        <div class="row">
            @Html.Action("getAllCourseByCategory", "Courses", new { id = @Model.id, metaTitle = @ViewBag.metaCourses })
        </div>
    </div>
</section>
