@model DDEdu.Models.typePost
@using DDEdu.Helper
@{
    ViewBag.Title = "News Category Detail";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                News Category Detail
            </div>
            <div class="panel-body">
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <b>Name</b>
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.nameType, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <b>Link</b>
                        </div>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.link, new { @class = "form-control", @rows = 1, @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <b>Meta</b>
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.meta, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <b>Display</b>
                        </div>
                        <div class="col-md-8">
                            @{
                                bool hide = (Model.hide.GetValueOrDefault(false) ? true : false);
                            }
                            @Html.CheckBoxFor(model => hide, new { @class = "big-checkbox", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <b>Order</b>
                        </div>
                        <div class="col-md-1">
                            @Html.EditorFor(model => model.order, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>
                    <div class="form-group text-end">
                        <div class="col-md-10" style="text-align:end">
                            @Html.NoEncodeActionLink("<span>BACK</span>", "BACK", "Index", "typePosts", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            @Html.NoEncodeActionLink("<span>EDIT</span>", "EDIT", "Edit", "typePosts", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
