@model DDEdu.Models.slide
@using DDEdu.Helper
@{
    ViewBag.Title = "Create new slide";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
<style>
    #img{
        width:100%;
        height:50px;
    }
</style>

<div class="row ms-auto">
    <div class="col-lg-12">
        <!-- Increased the width to center the panel better -->
        <div class="panel panel-primary ms-auto">
            <!-- Center align the panel -->
            <div class="panel-heading">
                Create new Slide
            </div>
            <div class="panel-body align-contenr-center">
                <form action="/admin/slides/Create" enctype="multipart/form-data" id="editMenuForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2" for="Order">Upload Image</label>
                            <div class="col-md-4">
                                <input type="file" name="img" id="img" accept=".jpg,.png,.gif,.jpeg,.bmp" />
                            </div>
                            <label class="control-label col-md-1" for="Display">Display</label>
                            <div class="col-md-1">
                                <input checked="checked" class="big-checkbox" data-val="true" data-val-required="The Boolean field is required." id="hide" name="hide" type="checkbox" value="true" />
                                <input name="hide" type="hidden" value="false" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="hide" data-valmsg-replace="true"></span>
                            </div>
                            <label class="control-label col-md-1" for="Order">Order</label>
                            <div class="col-md-1">
                                <input class="form-control text-box single-line" data-val="true" data-val-number="The field order must be a number." id="order" name="order" type="number" value="" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="order" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group text-end">
                            <div class="col-md-10" style="text-align:end">
                                @Html.NoEncodeActionLink("<span>BACK</span>", "BACK", "Index", "slides", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                                <input type="submit" value="SAVE" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


