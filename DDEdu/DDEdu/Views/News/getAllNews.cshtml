@model List<DDEdu.Models.newPost>

<div class="col-lg-8 col-12">
    <h3 class="mb-4"><a href="/@Model[0].meta">CHECK OUT OUR NEWS</a></h3>
</div>
<div class="row" id="news-container">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-lg-8 col-12 new-page news-item @(i >= 3 ? "d-none" : "")">
            <div class="d-flex">
                <!-- Hình ảnh bên trái -->
                <img src="~/Content/images/@Model[i].image" class="news-img" alt="news image">
                <!-- Nội dung bên phải -->
                <div>
                    <div class="title"><a href="/@Model[i].meta/@Model[i].id">@Model[i].title</a></div>
                    <div class="desc">@Model[i].desc</div>
                    <div class="posted-date">Posted: @Model[i].postDate.Value.ToString("dd/MM/yyyy")</div>
                </div>
            </div>
        </div>
    }
</div>
<div class="col-lg-12 col-12">
    <div id="view-more-btn" class="view-more">View More</div>
</div>
