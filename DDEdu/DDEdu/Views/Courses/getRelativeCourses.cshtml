@model List<DDEdu.Models.course>

@foreach (var cou in Model)
{
    <div class="course-box col-lg-3 col-md-6 col-8">
        <img src="~/Content/images/@cou.image" alt="Course Graphic">
        <div class="title"><a href="/@ViewBag.metaCourse/@cou.meta/@cou.id">@cou.name</a></div>
        <div class="desc">@cou.desc</div>
        <div class="desc">
            Tuition: <b style ="color:red">@cou.tuition</b> VND<br />
            Start on: @cou.startOn.Value.ToString("dd/MM/yyyy")
        </div>
        <a href="/@ViewBag.metaCourse/@cou.meta/@cou.id" class="btn-signup">Sign Up</a>
    </div>
}
