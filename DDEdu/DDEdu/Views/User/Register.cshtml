@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model DDEdu.Models.user

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="section-padding section-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-12">
                    <br />
                    <br />
                    <br />
                    <div class="custom-form contact-form shadow-lg" role="form">
                        <div class="row">
                            <div class="col-lg-12 col-12">
                                <h4 class="mb-12 title-form">CREATE AN ACCOUNT</h4>
                            </div>
                            <div class="col-lg-12 col-12">
                                <div class="notice">@Html.ValidationMessageFor(m => m.username)</div>
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.username, new { @class = "form-control", placeholder = "Name", required = "" })
                                    <label for="username">Username</label>
                                </div>

                                <div class="notice">@Html.ValidationMessageFor(m => m.fullname)</div>
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.fullname, new { @class = "form-control", placeholder = "FullName", required = "" })
                                    <label for="fullname">Fullname</label>
                                </div>

                                <div class="notice">@Html.ValidationMessageFor(m => m.email)</div>
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", placeholder = "Email", required = "" })
                                    <label for="email">Email</label>
                                </div>
                                <!-- Thêm trường ngày sinh -->
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.birth, new { @class = "form-control", type = "date", required = "" })
                                    <label for="birth">Date of Birth</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input checkinput" type="checkbox" value="" id="agreeTerms" required>
                                    <label class="text-white" for="agreeTerms">
                                        I agree to the <a href="#" class="title-form">terms and conditions</a>
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-6 col-6">
                                <a href="/user" class="forgot">I already have an account</a>
                            </div>
                            <div class="col-lg-6 col-6 ms-auto">
                                <button type="submit" class="form-control">REGISTRY</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

