@model DDEdu.Models.slide
@using DDEdu.Helper
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Update Slide
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "slides", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)
                    <div class="form-group">
                        @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            <img src="~/Content/upload/img/slide/@Model.name" width="150px" />
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="img" id="img" accept=".jpg,.png,.gif,.jpeg,.bmp" />
                        </div>
                        <label class="control-label col-md-1" for="Display">Display</label>
                        <div class="col-md-1">
                            <input checked="checked" class="big-checkbox" data-val="true" data-val-required="The Boolean field is required." id="hide" name="hide" type="checkbox" value="true" />
                            <input name="hide" type="hidden" value="false" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="hide" data-valmsg-replace="true"></span>
                        </div>
                        <label class="control-label col-md-1" for="Order">Order</label>
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.order, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    </div>
                    <div class="form-group text-end">
                        <div class="col-md-10" style="text-align:end">
                            @Html.NoEncodeActionLink("<span>BACK</span>", "BACK", "Index", "slides", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            <input type="submit" value="SAVE" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
