
@model IEnumerable<DDEdu.Models.aboutu>
@using DDEdu.Helper

<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>No.</th>
            <th>TITLE</th>
            <th>ICON</th>
            <th>TYPE TAG</th>
            <th>ORDER</th>
            <th>DISPLAY</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var Number1 = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.Raw(Number1++)</td>
                <td>@Html.DisplayFor(modelItem => item.title)</td>
                <td> <i class="@item.icon"></i></td>
                <td>@(item.isquestion.GetValueOrDefault(false) ? "Question" : "Information")</td>
                <td>@Html.DisplayFor(modelItem => item.order)</td>
                <td>@(item.hide.GetValueOrDefault(false) ? "Display" : "Hide")</td>
                <td>
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "aboutus", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "aboutus", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "aboutus", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true,
            order: [], // Tắt sắp xếp mặc định
            columnDefs: [
                { orderable: false, targets: '_all' } // Tắt sắp xếp cho tất cả các cột
            ],

        });
    });
</script>
