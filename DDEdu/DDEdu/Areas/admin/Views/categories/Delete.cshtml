@model DDEdu.Models.category
@using DDEdu.Helper
@{
    ViewBag.Title = "Delete Menu";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";

}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                Delete menu
               
            </div>
            <div class="col-md-12" style="text-align:center">
                <h4>Are you sure to delete <span style="color:red"><b>@Model.name</b> </span> ?</h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Name</b>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Link</b>
                            </div>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.link, new { @class = "form-control", @rows = 1, @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Meta</b>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.meta, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Display</b>
                            </div>
                            <div class="col-md-8">
                                @{
                                    bool hide = (Model.hide.GetValueOrDefault(false) ? true : false);
                                }
                                @Html.CheckBoxFor(model => hide, new { @class = "big-checkbox", @disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Parent Menu</b>
                            </div>
                            <div class="col-md-8 readonly">
                                <input type="text" value="@ViewBag.ParentMenu" class="form-control" readonly />
                                @Html.HiddenFor(model => model.idMenu)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <b>Order</b>
                            </div>
                            <div class="col-md-1">
                                @Html.EditorFor(model => model.order, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <div class="form-group text-end">


                            <div class="col-md-10" style="text-align:end">
                                @Html.NoEncodeActionLink("<span>BACK</span>", "BACK", "Index", "menus", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                                <input type="submit" value="DELETE" class="btn btn-danger ms-2" />
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

