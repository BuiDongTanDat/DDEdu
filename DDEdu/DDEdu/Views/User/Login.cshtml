@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model DDEdu.Models.user

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="section-padding section-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-12">
                    <br />
                    <br />
                    <br />
                    <div class="custom-form contact-form shadow-lg" role="form">
                        <div class="row">
                            <div class="col-lg-12 col-12">
                                <h4 class="mb-12 title-form">LOGIN TO DDEDU</h4>
                                <div class="notice">@ViewBag.LoginFail</div>
                            </div>
                            <div class="col-lg-12 col-12">
                                <div class="form-floating">
                                    <input type="text" name="username" id="username" class="form-control" placeholder="Username" required=""
                                           value="@Request.Form["username"]"> @*Giữ lại tên nếu mỗi lần nhập sai*@
                                        <label for="username">Username</label>
                                    </div>

                                    <div class="form-floating">
                                        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="">
                                        <label for="password">Password</label>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-6">
                                    <a href="/user/forgot" class="forgot">Forgot password?</a>
                                </div>
                                <div class="col-lg-6 col-6 ms-auto">
                                    <button type="submit" class="form-control">LOGIN</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <a href="/user/registry" class="title hover-login">Create a new account</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

@*Hiển thị hộp thoại khi đăng ký thành công*@
@if (TempData["Success"] != null)
{
    Html.RenderAction("getModel", "Layout", new { content = TempData["Success"].ToString() });
}