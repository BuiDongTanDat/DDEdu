@model DDEdu.Models.user
@using DDEdu.Helper
@{
    ViewBag.Title = "Delete User";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";

}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                Delete User
            </div>
            <div class="col-md-12" style="text-align:center">
                <h4>Are you sure to delete <span style="color:red"><b>@Model.fullname</b> </span> ?</h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="control-label col-md-3">
                            <b>Username</b>
                        </div>
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-3">
                            <b>Password</b>
                        </div>
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-3">
                            <b>Fullname</b>
                        </div>
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.fullname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-3">
                            <b>Email</b>
                        </div>
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-3">
                            <b>Birthday</b>
                        </div>
                        <div class="col-md-7">
                            <input name="birth" class="form-control readonly disabled" disabled value="@Model.birth.Value.ToString("dd/MM/yyyy")" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="control-label col-md-5">
                            <b>Status</b>
                        </div>
                        <div class="col-md-1">
                            @{
                                bool hide = (Model.isActive.GetValueOrDefault(false) ? true : false);
                            }
                            @Html.CheckBoxFor(model => hide, new { @class = "big-checkbox", @disabled = "disabled" })
                        </div>
                        <div class="control-label col-md-1">
                            <b>Is Admin</b>
                        </div>
                        <div class="col-md-1">
                            @{
                                bool admin = (Model.isAdmin.GetValueOrDefault(false) ? true : false);
                            }
                            @Html.CheckBoxFor(model => hide, new { @class = "big-checkbox", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group text-end">


                        <div class="col-md-10" style="text-align:end">
                            @Html.NoEncodeActionLink("<span>BACK</span>", "BACK", "Index", "users", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            <input type="submit" value="DELETE" class="btn btn-danger ms-2" />
                        </div>

                    </div>
                </div>
                }

            </div>
        </div>
    </div>
</div>

